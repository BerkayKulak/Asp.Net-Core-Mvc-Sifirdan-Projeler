@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<h1>Product List</h1>

<table class="table table-sm table-bordered">
    <thead class="btn-primary text-white">
        <tr>
            <td>Name</td>
            <td>Price</td>
            <td>IsApproved</td>
            <td></td>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>
                    @if (item.isApproved)
                    {
                        <text>Onaylı</text>
                    }
                    else
                    {
                        <text>Onay Bekliyor</text>
                    }
                </td>


                <td><a class="btn btn-danger btn-sm" asp-controller="Home" asp-action="Edit" asp-route-id="@item.Id">Update</a></td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-controller="Home" asp-action="Create">Create</a>