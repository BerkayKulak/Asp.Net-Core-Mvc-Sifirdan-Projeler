@model Customer
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body class="m-1 p-1">
    <form method="post" asp-action="Create">s
        <div class="form-group">
            <label asp-for="CustomerId"></label>
            <input asp-for="CustomerId" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="LastName">CustomerId</label>
            <input asp-for="LastName" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="Role">CustomerId</label>
            <select asp-for="Role" class="form-control" asp-items="@new SelectList(Enum.GetNames(typeof(Role)))"></select>
        </div>
        <input type="submit" value="Submit"/>
    </form>
</body>
</html>
